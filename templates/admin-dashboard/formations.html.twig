{% extends 'base.html.twig' %}

{% block title %}Hello FormationsController!{% endblock %}

{% block body %}
<style>
    .content { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .content code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="content">
    <h1 class="my-5">Formations</h1>
    <ul id="formation-list">
        {% for formation in formations %}
            {% set actions = [] %}
            {% for item in items %}
                {% if item.formation is formation %}
                    {% set actions = actions|merge([item]) %}
                {% endif %}
            {% endfor %}
            {% include "components/formationItem.html.twig" with {formation, actions} %}
        {% endfor %}
    </ul>

</div>
{% endblock %}

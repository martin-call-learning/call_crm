{% extends 'base.html.twig' %}

{% block title %}Hello FormationsController!{% endblock %}

{% block body %}
<style>
    .content { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .content code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="content bg-light p-5 rounded-5">
    <h1 class="">Formations</h1>
    <ul id="formation-list">
        {% for formation in formations %}
            {% include "components/formationItem.html.twig" with {formation} %}
        {% endfor %}
    </ul>

</div>
{% endblock %}
